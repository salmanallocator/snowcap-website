{% macro project_image_flipper(project, format) %}
    <img
        class="front"
        src="{{ project.thumb_front.path|imresize(format) }}"
        alt="{{ project.thumb_front.alt }}"
    />
    <img
        class="back"
        src="{{ project.thumb_back.path|imresize(format) }}"
        alt="{{ project.thumb_back.alt }}"
    />
{% endmacro %}

